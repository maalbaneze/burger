<div class="container bgr">

    <div class="row">

        <div class="center col-sm-12">
            <img src="assets/img/burger.jpg" alt="burger pic" id="burgerpic" style="background-size:cover">
            <h1>Burger app</h1>
            <p></p>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-6">
            <h2>Burgers yet to be devoured...</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <h2>Burgers that have been scarfed down</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>

    </div>

    <div class="row">
        <div class="center col-sm-12">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured">Devoured?</label><br>
                    <input type="radio" name="eaten" value="1"> Not yet eaten<br>
                    <input type="radio" name="eaten" value="0"> Eaten
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>

    </div>

</div>